{


    // SASS COMPILE ============================================
    "liveSassCompile.settings.formats": [{
            "format": "compressed", //compressed or expanded 
            "extensionName": ".css",
            "savePath": "/src/css" //diretorio para salvar o arquivo .css
        },

    ],

    //lista de pasta para nÃ£o compilar
    "liveSassCompile.settings.excludeList": [

        "**/node_modules/**",
        "**/Antigo/**",
        ".vscode/**",
        // "**/slick/**",

    ],

    //config que gera .map 
    "liveSassCompile.settings.generateMap": true,

    // prefix
    "liveSassCompile.settings.autoprefix": [
        "> 2%",
        // "last 2 versions"
    ],

    //nao mostra a barra || open output  ctrl+shift+u
    "liveSassCompile.settings.showOutputWindow": false,

    //config pessoais ===

    "editor.lineHeight": 26,
    "workbench.editor.tabSizing": "fit",
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#ce7a79"
    },
    "editor.wordWrap": "on",
    "scss.showErrors": true,
    "html-css-class-completion.enableScssFindUsage": true,
    "liveServer.settings.port": 5501,
  
}












// https://ritwickdey.github.io/vscode-live-sass-compiler/docs/settings.html